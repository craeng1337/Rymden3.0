<body>
    <div class="stars">
  <% 
    var anims = ['blinkStar', 'blinkStarAlt', 'blinkStarSoft', 'blinkStarPulse'];
    var colors = ['#ffffff', '#9bf6ff', '#00fff7', '#ffd6a5', '#caffbf', '#ffadad']; // vit, blÃ¥, cyan, orange, lime, rosa

    for (var i = 0; i < 100; i++) {
      var top = Math.random() * 100;
      var left = Math.random() * 100;
      var anim = anims[Math.floor(Math.random() * anims.length)];
      var color = colors[Math.floor(Math.random() * colors.length)];
      var duration = (Math.random() * 3 + 2).toFixed(2);
      var delay = (Math.random() * 5).toFixed(2);
      var size = (Math.random() * 2 + 1).toFixed(1);
  %>
    <div 
      class="star" 
      style="
        top:<%= top %>vh;
        left:<%= left %>vw;
        animation-name:<%= anim %>;
        animation-duration:<%= duration %>s;
        animation-delay:<%= delay %>s;
        width:<%= size %>px;
        height:<%= size %>px;
        background:<%= color %>;
      ">
    </div>
  <% } %>
</div>


    <h1>Edit user</h1>

<form action="/edit" method="POST">
  <input type="hidden" name="id" value="<%= user.id %>">

  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="<%= user.name %>" required><br><br>

  <label for="nickname">Nickname:</label>
  <input type="text" name="nickname" id="nickname" value="<%= user.nickname %>" required><br><br>

  <label for="age">Age:</label>
  <input type="number" name="age" id="age" value="<%= user.age %>" required max="150"><br><br>
  
  <label for="email">Email:</label>
  <input type="email" name="email" id="email" value="<%= user.email || '' %>" required>

  
  <label for="phone">Phone:</label>
  <input type="text" name="phone" id="phone" value="<%= user.phone || '' %>" required>


  <label for="bio">Bio:</label>
  <textarea name="bio" id="bio" rows="5" cols="40" required><%= user.bio %></textarea><br><br>

  <button type="submit">Save change</button><br><br>
  <a href="/">Go to users</a>
</form>

    
</body>
</html>